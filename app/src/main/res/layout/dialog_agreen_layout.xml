<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="310dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="25dp"
    android:padding="20dp"
    android:layout_marginRight="25dp"
    android:background="@drawable/shape_white_corners7"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:includeFontPadding="false"
        android:text="温馨提示"
        android:textColor="#1a1a1a"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tips_app_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="欢迎来到"
        android:textColor="@color/text_black"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/agreement_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="45dp"
        android:layout_weight="1"
        android:lineSpacingExtra="2dp"
        android:textColor="@color/text_black"
        android:text="@string/agreement"
        android:textSize="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="您可以阅读完整版"
            android:textColor="@color/text_black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/agreement_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《用户协议》"
            android:textColor="@color/blue"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="和"
            android:textColor="@color/text_black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/agreement_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《隐私政策》"
            android:textColor="@color/blue"
            android:textSize="13dp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:background="@drawable/bg_gray_line_25"
            android:gravity="center"
            android:text="拒绝并退出"
            android:textColor="@color/text_gray_dark"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/bg_ff3f19_25"
            android:gravity="center"
            android:text="同意"
            android:textColor="@color/white"
            android:textSize="14dp" />

    </LinearLayout>


</LinearLayout>
